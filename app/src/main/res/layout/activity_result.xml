<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:too1s="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    too1s:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.toni.liquidcalccompatible.activities.ResultActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorResultHead"
        android:textSize="@dimen/textResultHead"
        android:text="@string/result_text_head"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/result_margin"
            android:text="@string/result_text"
            android:textColor="@color/colorResult"
            android:textSize="@dimen/textResult" />
    </FrameLayout>

</LinearLayout>

